<h1>hay hoi mot cau</h1>

<form action ="/question/add" method="POST">
    <textarea maxlength="200" rows="6" id="question" name="questionContent" onkeyup="countWord()" 
                style="display: block;
                    width: 80%;
                    height: 50px;
                    padding: 20px 12px;
                    font-size: 14px;
                    color: #555;
                    border: 1px solid #ccc;
                    border-radius: 4px;            
                ">
            </textarea>
            
    <p id="askbox">Còn 200/200 kí tự</p>

    <script type="text/javascript">
        function countWord() {
            let input = document.getElementById("question");
            console.log(input);
            document.getElementById("askbox").innerHTML = "Còn " + (200 - input.value.length) + "/200 kí tự";
        }
    </script>

    <button type="submit"
            style=" color: #fff;
                    background-color: #337ab7;
                    border-color: #2e6da4;
                    display:block;
                    padding: 6px 12px;                            
                    text-align: center;                    
                    cursor: pointer;
                    border: 1px solid;
                    border-radius: 4px;             
     ">
        Gửi
    </button>
    
</form>
